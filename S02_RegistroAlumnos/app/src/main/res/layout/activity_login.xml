<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imgFondo"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fondo_uns" />

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INICIO DE SESIÓN"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#D20037"
            android:layout_marginTop="24dp" />

        <!-- Usuario -->
        <LinearLayout
            android:id="@+id/llUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:paddingHorizontal="74dp">


            <ImageView
                android:id="@+id/imgUsuario"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/usuario"/>

            <EditText
                android:id="@+id/etUsuario"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Usuario"
                android:inputType="text"
                android:textColor="#000000"
                android:paddingStart="8dp"
                android:backgroundTint="#D20037"/>
        </LinearLayout>

        <!-- Contraseña -->
        <LinearLayout
            android:id="@+id/llContra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="74dp">

            <ImageView
                android:id="@+id/imgContra"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/contra"/>

            <EditText
                android:id="@+id/etContra"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Contraseña"
                android:textColor="#000000"
                android:paddingStart="8dp"
                android:inputType="textPassword"
                android:backgroundTint="#D20037"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="70dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#D20037"/>


        <!-- Nuevo Usuario -->
        <TextView
            android:id="@+id/tvNuevoRegistro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Nuevo usuario?"
            android:layout_marginTop="40dp"
            android:textColor="#7F7F7F"
            android:textSize="16sp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center_horizontal"
            android:paddingTop="40dp"/>

        <TextView
            android:id="@+id/tvRegistrarse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrarse"
            android:textColor="#D20037"
            android:textSize="16sp"
            android:textStyle="bold" />


        <!-- Bienvenida -->
        <TextView
            android:id="@+id/tvBienvenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Bienvenido!"
            android:textSize="30sp"
            android:textStyle="bold"
            android:paddingTop="50dp"
            android:textColor="#D20037"
            android:layout_marginTop="50dp"
            android:visibility="gone"/>



        <!-- Formulario de Registro (oculto inicialmente) -->
        <LinearLayout
            android:id="@+id/llRegistro"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingHorizontal="60dp"

            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REGISTRO"
                android:textStyle="bold"
                android:textColor="#D20037"
                android:textSize="20dp"
                android:gravity="center_horizontal"/>

            <EditText
                android:id="@+id/etContraRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Código"
                android:inputType="number"
                android:textSize="16dp"
                android:paddingStart="8dp"
                android:backgroundTint="#D20037"
                android:textColor="#000000"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/etApellidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apellidos"
                android:inputType="text"
                android:textSize="16dp"
                android:paddingStart="8dp"
                android:backgroundTint="#D20037"
                android:textColor="#000000"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/etNombres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombres"
                android:inputType="text"
                android:textSize="16dp"
                android:paddingStart="8dp"
                android:backgroundTint="#D20037"
                android:textColor="#000000"
                android:layout_marginTop="10dp"/>


            <EditText
                android:id="@+id/etCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo electrónico"
                android:inputType="textEmailAddress"
                android:textSize="16dp"
                android:paddingStart="8dp"
                android:backgroundTint="#D20037"
                android:textColor="#000000"
                android:layout_marginTop="10dp"/>


            <Button
                android:id="@+id/btnRegistrarse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrarse"
                android:textSize="18dp"
                android:layout_marginTop="30dp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#D20037"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inicio"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="60dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#D20037"
            android:visibility="gone"/>

    </LinearLayout>

</ScrollView>
