<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:id="@+id/titulo_servicios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SERVICIOS"
            android:textColor="#D40038"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="24sp"
            android:paddingBottom="24dp" />

        <!-- Fila 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <!-- Servicio 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Página UNS"
                    android:textColor="#D40038"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <ImageView
                    android:id="@+id/pagina_uns"
                    android:layout_width="170dp"
                    android:layout_height="140dp"
                    android:src="@drawable/universidad"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <!-- Servicio 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Repositorio UNS"
                    android:textColor="#D40038"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <ImageView
                    android:id="@+id/repositorio_uns"
                    android:layout_width="170dp"
                    android:layout_height="140dp"
                    android:src="@drawable/repositorio"
                    android:scaleType="centerCrop" />
            </LinearLayout>
        </LinearLayout>

        <!-- Fila 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:gravity="center">

            <!-- Servicio 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Campus Virtual UNS"
                    android:textColor="#D40038"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <ImageView
                    android:id="@+id/campus_virtual_uns"
                    android:layout_width="170dp"
                    android:layout_height="140dp"
                    android:src="@drawable/campus"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <!-- Servicio 4 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIIGAA"
                    android:textColor="#D40038"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <ImageView
                    android:id="@+id/siigaa"
                    android:layout_width="170dp"
                    android:layout_height="140dp"
                    android:src="@drawable/siigaa"
                    android:scaleType="centerCrop" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
